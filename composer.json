{
    "name": "publishing-kit/collection",
    "type": "library",
    "description": "PHP collection class",
    "keywords": [
        "publishing-kit",
        "collection"
    ],
    "homepage": "https://github.com/publishing-kit/collection",
    "license": "MIT",
    "authors": [
        {
            "name": "Matthew Daly",
            "email": "450801+matthewbdaly@users.noreply.github.com",
            "homepage": "https://matthewdaly.co.uk",
            "role": "Developer"
        }
    ],
    "require": {
        "php" : "~7.2"
    },
    "require-dev": {
        "phpunit/phpunit" : ">=8.0",
        "squizlabs/php_codesniffer": "^3.0",
        "vimeo/psalm": "^3.4"
    },
    "autoload": {
        "psr-4": {
            "PublishingKit\\Collection\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PublishingKit\\Collection\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs src tests",
        "fix-style": "phpcbf src tests",
        "psalm": "psalm"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
